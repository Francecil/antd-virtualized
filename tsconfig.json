{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
